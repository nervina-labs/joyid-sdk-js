{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "paths": {
      "@joyid/common": [
        "./packages/common/src"
      ],
      "@joyid/common/*": [
        "packages/common/src/*"
      ],
      "@joyid/evm": [
        "./packages/evm/src"
      ],
      "@joyid/evm/*": [
        "./packages/evm/src/*"
      ],
      "@joyid/ethereum-provider": [
        "./packages/ethereum-provider/src"
      ],
      "@joyid/ethereum-provider/*": [
        "./packages/ethereum-provider/src/*"
      ],
      "@joyid/wagmi": [
        "./packages/wagmi/src"
      ],
      "@joyid/wagmi/*": [
        "./packages/wagmi/src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ],
  "include": [
    "packages/**/*",
    "tsup-base.config.ts",
    "eslint.config.js"
  ]
}
